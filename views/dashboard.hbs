<h1 class="admin-title">Admin Dashboard</h1>

<div class="container-fluid">
    <h1 class="event-header">Your Listed Shows</h1>
    {{#each events}}
    <div class="events row">
        <div class="col-sm-12">
            <p class="event-day">{{this.day}}</p>
            <p class="event-month">{{this.month}}</p>
            <p class="event-title">{{this.title}}</p>
            <p class="event-location">{{this.location}}</p>
            <p class="event-link">{{this.link}}</p>
            <form action="/auth/{{this._id}}?_method=DELETE" method="POST">
                <button class = "btn-danger"type = "submit">Delete</button>    
                {{!-- <input type="submit"><p class="delete-event-btn" type="submit"><strong>DELETE EVENT</strong></p> --}}
            </form>
        </div>
    </div>
    {{/each}}

    <form class=class="form-group" action="/auth/event" method="post">
        <legend>Add a new Event</legend>
        <div class="form-group">
            <label for="day">Day</label>
            <input class="form-control" type="text" name="day" placeholder="23">
        </div>
        <div class="form-group">
            <label for="month">Month</label>
            <input class="form-control" type="text" name="month" placeholder="FEB">
        </div>
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="title" placeholder="Event Title">    
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control"type="text" name="location" placeholder="Address / City, State">
        </div>
        <div class="form-group">
            <label for="link">Link</label>
            <input class="form-control"type="text" name="link" placeholder="www.site.com">
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
    

    <button class="logout-btn btn btn-primary" ><a class="logout-btn-link" href="/logout" title="logout">Logout</a></button>
</div>

<style>
    #footer {
        display: none;
    }
    .admin-title {
        padding-top: 3em;
        display: block;
        margin: 0 auto;
        text-align: center;
    }
    .delete-event-btn {
        background-color: white;
        padding: 3px 5px;
        cursor: pointer;
    }
    .delete-event-btn:hover {
        background-color: red;
    }
    .events.row:hover {
        background-color: rgba(255, 0, 0, 0.728);
    }
    .logout-btn {
            display: block;
            margin: 20px auto;
    }
    .logout-btn-link {
        color: white;
    }
    footer {
        position: unset;
    }
    input {
        max-width: 300px;
    }
</style>

<script src="/js/events-particle.js"></script>
